{
  "testEnvironment": "node",
  "roots": [ "<rootDir>/test" ],
  "setupFiles": [
    "<rootDir>/test/setup.ts"
  ],
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s",
    "!src/swagger/**/*.ts"
  ],
  "coverageDirectory": "<rootDir>/coverage/"
}